<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#97A5EAFF"
    tools:context=".UserProfile">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="210dp"
        app:srcCompat="@drawable/header" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome!"
            android:textStyle="bold"
            android:textColor="#1B76BF"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/setname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#1B76BF"
            android:textSize="25dp"
            android:text="Name"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center">

        <TextView
            android:id="@+id/compname"
            android:layout_width="230dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:text=" Name "
            android:background="#884FC8BD"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="''Please connect to your company's wifi''"
                android:textSize="18dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="Push the refresh button to check"
                android:textSize="18dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="your attendance."
                android:textSize="18dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="85dp"
            android:layout_height="88dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/refreshbackground"
            android:backgroundTint="#884FC8BD">

            <ImageButton
                android:id="@+id/refresh"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/colour_change"
                android:background="@drawable/refreshwifi" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/attended"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:srcCompat="@drawable/tick" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Congratulation! You had successfully attended for work today."
            android:textSize="23dp"
            android:gravity="center"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/notattend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:srcCompat="@drawable/reject" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="You are not attend for work today. Are there any reason?"
            android:textSize="23dp"
            android:gravity="center"
            android:textColor="@color/black"/>

    </LinearLayout>

</LinearLayout>